{
  "compilerOptions": {
    "composite": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": ["es2022"],
    // "module": "nodenext",
    // "moduleResolution": "nodenext",

    "module": "esnext",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,

    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022",
    "customConditions": ["@org/source"],
    "paths": {
      "@libs/popups": ["libs/popups/src/index.ts"], // This path is necesary for Next.js
    }
  }
}
